<!DOCTYPE html>
<html>
<head>
  <title>FrontendTest</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700" rel="stylesheet">

  <script type="text/javascript">
    var favGems = [];
    function addToListFavGems(){
      var newFavGem = document.getElementById('gemName');
      favGems.push('newFavGem').value;
      if(window.localStorage){
        localStorage.setItem('gemNameKey', JSON.stringify(favGems)
      }
    }

    function readGemNames(){
      if (window.localStorage) {
        var gemNames = localStorage.getItem('gemNameKey');
        var resultGemNames = JSON.parse(gemNames);
        document.getElementbyId('displayGemNames').innerHTML = resultGemNames;
    }
      }

    function removeGemNames(){
      if (window.localStorage) {
        var gemNames = localStorage.removeItem('gemNameKey');
      }
    }

    function test() {
      alert(window.document.pic.src);
      if (document.pic.src=='/assets/star-gray.png') {
        document.pic.src='/assets/star-blue.png';
      }
      else if (document.pic.src=='/assets/star-blue.png') {
        document.pic.src='/assets/star-gray.png';
      }
    }


  </script>  
</head>
