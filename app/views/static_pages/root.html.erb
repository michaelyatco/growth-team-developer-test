<img src="/assets/map.png" class="img-background">
<!-- <div class="left-container">blahblah</div> -->
<div id="background">
    <div class="teachable-logo"><%= image_tag "teachable-logo.png" %></div>
    <div class="search-button <%= 'current-page' if request.path == '/' %>">Search<a href="/"></a></div>
    <div class="fav-button <%= 'current-page' if request.path == '/favorites' %>">Favorites<a href="/favorites"></a></div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h1>Search Gems</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-3">
            <form action="" class="search-form">
                <%= form_tag "/", method: :get do %>
                <div class="form-group has-feedback">
            		<label for="search" class="sr-only">Search Gems</label>
            		<input type="text" class="form-control" name="search_result" id="search" placeholder="Search Gems">
              		<%= image_tag "magnifying-glass.png" %>
            	</div>
                <% end %>
				    <% if @gems == nil %>
					    <h1>Welcome!</h1>
					<% else %>	
		                <% @gems.first(1).each do |result| %>
				           <p> <a href=" <%= result["project_uri"] %>" target="_blank"><%= result["name"] %></a> <span><%= image_tag "star-gray.png" %></span></p>
				      	   <p> Information </p>
				      	   <p> <%= result["info"] %> </p>
				      	   <p> Platform </p> 
				      	   <p> <%= result["platform"] %> </p>
	 				    <% end %>
				    <% end %>
            </form>
        </div>
    </div>
</div>

